{
  "$schema": "https://json.schemastore.org/youtrack-app.json",
  "name": "md-embed",
  "title": "Markdown Snippet widget",
  "description": "YouTrack widget allows to embed article/issue parts or custom content into markdown content",
  "vendor": {
    "name": "Damir Yusipov",
    "url": "https://github.com/udamir"
  },
  "version": "1.2.0",
  "icon": "icon.svg",
  "minYouTrackVersion": "2024.3.0",
  "changeNotes": "https://github.com/udamir/youtrack-widget-md-embed/releases",
  "url": "https://github.com/udamir/youtrack-widget-md-embed",
  "widgets": [
    {
      "key": "snippet",
      "name": "Markdown Snippet widget",
      "indexPath": "snippet/index.html",
      "extensionPoint": "MARKDOWN",
      "iconPath": "snippet/icon.svg",
      "description": "Embed article/issue parts or custom content into markdown content",
      "settingsSchemaPath": "snippet/settings.json",
      "defaultDimensions": {
        "height": "480px",
        "width": "90%"
      }
    }
  ]
}
